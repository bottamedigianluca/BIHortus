# BiHortus - Template Configurazione Produzione
# Copia questo file in .env e inserisci i valori reali

# Database Arca Evolution - CONFIGURAZIONE REALE
DB_ARCA_HOST=your-arca-server.domain.com
DB_ARCA_PORT=1433
DB_ARCA_DATABASE=ADB_BOTTAMEDI
DB_ARCA_USER=your-readonly-user
DB_ARCA_PASSWORD=your-secure-password
DB_ARCA_ENCRYPT=true
DB_ARCA_TRUST_SERVER_CERTIFICATE=true

# Database SQLite Locale
DB_SQLITE_PATH=./database/sqlite/bihortus.db

# Cloud Sync Configuration
CLOUD_SYNC_ENABLED=true
CLOUD_SYNC_PROVIDER=supabase
CLOUD_SYNC_URL=https://your-project.supabase.co
CLOUD_SYNC_KEY=your-supabase-anon-key
CLOUD_SYNC_INTERVAL=300000

# Security - CAMBIARE IN PRODUZIONE
JWT_SECRET=your-jwt-secret-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-chars
API_KEY=your-api-key-32-chars

# Server Configuration
PORT=5000
CLIENT_PORT=3000
NODE_ENV=production

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bihortus.log

# Banking Integration (Opzionale)
BANKING_API_ENABLED=false
BANKING_API_URL=
BANKING_API_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./database/backups

# Notification Settings
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=admin@bottamedi.com
NOTIFICATION_WEBHOOK=

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
QUERY_TIMEOUT=30000