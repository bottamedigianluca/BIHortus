# Database Configuration
DB_SQLITE_PATH=./database/sqlite/bihortus.db
DB_ARCA_HOST=localhost
DB_ARCA_PORT=1433
DB_ARCA_DATABASE=ADB_BOTTAMEDI
DB_ARCA_USER=automation_user
DB_ARCA_PASSWORD=your_password
DB_ARCA_ENCRYPT=true
DB_ARCA_TRUST_SERVER_CERTIFICATE=true

# Cloud Sync Configuration
CLOUD_SYNC_ENABLED=true
CLOUD_SYNC_PROVIDER=supabase
CLOUD_SYNC_URL=https://your-project.supabase.co
CLOUD_SYNC_KEY=your-supabase-key
CLOUD_SYNC_INTERVAL=300000

# Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
API_KEY=your-api-key-here

# Server Configuration
PORT=5000
CLIENT_PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bihortus.log

# Banking Integration
BANKING_API_ENABLED=false
BANKING_API_URL=https://api.banking.com
BANKING_API_KEY=your-banking-api-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./database/backups

# Notification Settings
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=admin@bottamedi.com
NOTIFICATION_WEBHOOK=https://your-webhook-url.com

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600
QUERY_TIMEOUT=30000